@using MyBusiness.Models

@{
    ViewBag.Title = "Pants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
<br />
<div class ="bar"><span class="barText"><h2>Pants</h2></span></div>
 

 <script type="text/javascript">

     function UpdateWomen() {
         $.ajax({
             url: '@Url.Action("ReloadPantsWomen", "Pants")',
             data: {},
             type: 'POST',
             success: function (data) {
                 $('#tabs-1').html(data);
             }
         });
     }


     function UpdateMen() {
         $.ajax({
             url: '@Url.Action("ReloadPantsMen", "Pants")',
             data: {},
             type: 'POST',
             success: function (data) {
                 $('#tabs-2').html(data);
             }
         });
     }

     function UpdateView(tab, path, desc) {
         if (tab == "tabs-1") {
             $('#' + tab).html('<button onclick="UpdateWomen(); ">Go back</button> <br><img src="' + path + '" width=100% height=100% /> <br>' + desc);
         }
         else {
             $('#' + tab).html('<button onclick="UpdateMen(); ">Go back</button> <br><img src="' + path + '" width=100% height=100% /> <br>' + desc);
         }
     }


     $(function () {

         $("#tabs").tabs({

         });
         $("#tabs").tabs().css({
             'height': '660px',
             'overflow': 'auto',
             'font-size': '10pt'
         });

     });


    </script>
</head>
<body>
<br />
   <div id="tabs">
<ul>
<li id="tab1"><a href="#tabs-1">Women's</a></li>
<li id="tab2"><a href="#tabs-2">Men's</a></li>
</ul>
<div id="tabs-1">
 @Html.Partial("_PantsWomen")
</div>
<div id="tabs-2">
 @Html.Partial("_PantsMen")
</div>
</div>

</body>
</html>